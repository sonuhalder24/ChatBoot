<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:paddingVertical="15pt">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRemovePic"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/remove"
            android:padding="10dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/delete1"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTakePic"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        app:cardBackgroundColor="#1D7E22"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/takeCam"
            android:padding="10dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/camera"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGalleryPic"
        app:layout_constraintStart_toEndOf="@id/cardRemovePic"
        app:layout_constraintEnd_toStartOf="@+id/cardTakePic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        app:cardBackgroundColor="#680F8E"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gallery"
            android:padding="5dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/gallery"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardRemovePic"
        android:text="Remove"
        android:fontFamily="serif"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        app:layout_constraintStart_toStartOf="@id/cardRemovePic"
        app:layout_constraintEnd_toEndOf="@id/cardRemovePic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardGalleryPic"
        android:text="Gallery"
        android:fontFamily="serif"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        app:layout_constraintStart_toStartOf="@id/cardGalleryPic"
        app:layout_constraintEnd_toEndOf="@id/cardGalleryPic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardTakePic"
        android:text="Camera"
        android:fontFamily="serif"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        app:layout_constraintStart_toStartOf="@id/cardTakePic"
        app:layout_constraintEnd_toEndOf="@id/cardTakePic"/>
</androidx.constraintlayout.widget.ConstraintLayout>