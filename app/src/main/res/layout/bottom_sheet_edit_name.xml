<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:padding="15pt">
    <TextView
        android:id="@+id/sample1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Enter your name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColorHint="#590D78"
        android:hint="Atmost 20 character allowed"
        app:layout_constraintTop_toBottomOf="@id/sample1"
        tools:layout_editor_absoluteX="35dp" />
    <TextView
        android:id="@+id/cancelTxtName"
        android:text="CANCEL"
        app:layout_constraintEnd_toStartOf="@+id/saveTxtName"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_marginEnd="10pt"
        android:layout_marginTop="7pt"
        app:layout_constraintTop_toBottomOf="@+id/editNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/saveTxtName"
        android:text="SAVE"
        android:layout_marginTop="7pt"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/editNameTxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
