<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="5pt"
    android:paddingTop="4pt"
    xmlns:tool="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/imgContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2pt"
        android:layout_marginStart="2pt"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_width="55dp"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/friImg"
            android:scaleType="centerCrop"
            android:src="@drawable/person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/userName"
        tool:text="Dipa Halder"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:paddingLeft="12dp"
        app:layout_constraintStart_toEndOf="@+id/imgContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/userChat"
        tool:text="Hello I am here.Are you okay?"
        android:textColor="#AEA3A3"
        android:textSize="16dp"
        android:paddingLeft="12dp"
        app:layout_constraintStart_toEndOf="@+id/imgContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintBottom_toBottomOf="@id/imgContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/vHr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCCBCB"
        app:layout_constraintTop_toBottomOf="@id/userChat"
        android:layout_marginTop="8pt"
       />
</androidx.constraintlayout.widget.ConstraintLayout>