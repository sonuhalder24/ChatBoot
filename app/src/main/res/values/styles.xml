<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="materialTimePickerTheme">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>-->
    </style>
    <style name="textLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">#FFC023</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="profileTextsLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">#FFC023</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="hintTextColor">@color/common_google_signin_btn_text_light_default</item>
        <item name="android:textColorHint">@color/common_google_signin_btn_text_light_default</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

</resources>